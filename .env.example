# Database
DATABASE_URL=postgresql://user:password@localhost:5432/database

# JWT Authentication
JWT_SECRET=your_super_secret_jwt_key_here_minimum_32_chars

# Amazon SP-API (optional, can be configured per account)
AMAZON_LWA_APP_ID=amzn1.sp.solution.your_app_id
AMAZON_LWA_CLIENT_SECRET=your_client_secret
AMAZON_AWS_ACCESS_KEY=your_aws_access_key
AMAZON_AWS_SECRET_KEY=your_aws_secret_key
AMAZON_AWS_ROLE_ARN=arn:aws:iam::123456789:role/your_role
AMAZON_REFRESH_TOKEN=your_refresh_token
AMAZON_SP_API_APP_ID=amzn1.sp.solution.your_sp_api_app_id

# Development
NODE_ENV=development
PORT=5000
SKIP_AUTH=false

# SMTP Configuration for Password Recovery
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
SMTP_FROM=your_email@gmail.com
AMAZON_USE_SANDBOX=true